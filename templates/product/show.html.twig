{% extends 'base.html.twig' %}

{% block title %}Produto{% endblock %}

{% block body %}
    <h1>Produto</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Nome</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Preço</th>
                <td>{{ product.price|number_format(2, ",", ".") }}</td>
            </tr>
            <tr>
                <th>Descrição</th>
                <td>{{ product.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('product_index') }}">voltar</a>

    <a href="{{ path('product_edit', {'id': product.id}) }}">editar</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
